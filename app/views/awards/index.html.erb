<p id="notice"><%= notice %></p>

<h1>Prêmios</h1>

<table>
  <thead>
    <tr>
      <th>Evento</th>
      <th>Nome do Prêmio</th>
      <th>Ganhador do prêmio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @awards.each do |award| %>
      <tr>
        <td><%= award.event_id %></td>
        <td><%= award.award_name %></td>
        <td><%= award.user_id %></td>
        <td><%= link_to 'Ver', award %></td>
        <td><%= link_to 'Editar', edit_award_path(award) %></td>
        <td><%= link_to 'Excluir', award, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Prêmio', new_award_path %>
